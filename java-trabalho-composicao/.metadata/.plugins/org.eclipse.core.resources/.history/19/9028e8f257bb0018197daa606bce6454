package exemplos;

public class Bike {
	private String tipo;
	private String modelo;
	private String quadro;
	private String aro;


public Bike(String tipo, String modelo, String quadro, int aro) {
	this.tipo = tipo;
	this.modelo = modelo;
	this.quadro = quadro;
}

public void tipo(String tipo) {
	this.tipo = tipo;
}

public void modelo(String modelo) {
	this.modelo = modelo;
}

public void quadro(String quadro) {
	this.quadro = quadro;
}
public void aro(String aro) {
	this.aro = aro;
}


public String toString() {
	return "Tipo da Bike: " + tipo + "\n" + "Modelo da Bike: " + modelo + "\n" 
			+ "Tamhando do quadro: " + quadro + "\n" + "Tamanho do Aro: " + aro;
}


}